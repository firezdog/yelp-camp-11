<% include ../partials/header.ejs %>

<div class="wrapper container">
    <div class="row">
        <h1 style="text-align: center">Edit Campground "<%=campground.name%>"</h1>
        <div style="width:30%; margin:30px auto;">
            <form action="/campgrounds/<%=campground._id%>/update?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type="text" name="name" placeholder="name" value="<%=campground.name%>"/>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="image" placeholder="image url" value="<%=campground.image%>"/>
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="description" placeholder="description" value="<%=campground.description%>"/>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <span class="input-group-addon">$</span>
                        <input class="form-control" type="number" step="0.01" min="0.00" value="<%=campground.price%>" name="price">
                        <span class="input-group-addon">/ night</span>
                    </div>
                </div>
                <div class="form group">
                    <button class="btn btn-lg btn-primary btn-block">Submit!</button>
                </div>
            </form>
            <a href="/campgrounds">Back to campgrounds</a>
        </div>
    </div>
</div>

<% include ../partials/footer.ejs %>